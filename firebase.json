{
  "firestore": {
    "rules": "firestore.rules",
    "indexes": "firestore.indexes.json"
  },
  "functions": {
    "source": "functions",
    "predeploy": [
      "npm --prefix \"$RESOURCE_DIR\" run lint"
    ]
  },
  "storage": {
    "rules": "storage.rules"
  },
  "emulators": {
    "auth": {
      "port": 9099
    },
    "functions": {
      "port": 5001
    },
    "firestore": {
      "port": 8080
    },
    "storage": {
      "port": 9199
    },
    "ui": {
      "enabled": true,
      "port": 4000
    },
    "database": {
      "port": 9000
    },
    "hosting": {
      "port": 5000
    },
    "singleProjectMode": true
  },
  "hosting": {
    "public": "frontend/build",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      { "source": "/fr/**", "destination": "/index.html" },
      { "source": "/en/**", "destination": "/index.html" },
      { "source": "/de/**", "destination": "/index.html" },
      { "source": "/it/**", "destination": "/index.html" },
      { "source": "**", "destination": "/index.html" }
    ],
    "trailingSlash": false
  }
}
